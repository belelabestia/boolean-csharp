@model Post

@{
	var post = Model;
}

<h2>New post</h2>

<div class="container">
	<div class="pad">
		<form method="post" asp-controller="Post" asp-action="Create">
			@Html.AntiForgeryToken()
			<div class="form-field">
				<label asp-for="Title">Title</label>
				<input asp-for="Title"/>
				<span asp-validation-for="Title" class="text error"></span>
			</div>
			<div class="form-field">
				<label asp-for="Description">Description</label>
				<textarea asp-for="Description"></textarea>
				<span asp-validation-for="Description" class="text error"></span>
			</div>
			<div class="form-field">
				<label asp-for="ImageSrc">Image source</label>
				<input asp-for="ImageSrc"/>
				<span asp-validation-for="ImageSrc" class="text error"></span>
			</div>
			<button type="submit">Create</button>
		</form>
	</div>
</div>